  <head>
  	<meta charset="utf-8" />

  	<!-- Uncomment to make IE8 render like IE7 -->
  	<!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

  	<!-- Set the viewport width to device width for mobile -->
  	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

  	<title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>

  	<%= stylesheet_link_tag    "application" %>
  	<%= javascript_include_tag "vendor/custom.modernizr" %>
    <%= csrf_meta_tags %>
  </head>

  <body>


<header class="header">

  <h1 class="main-header">Zurb</h1>

<ul class="header-subnav">

<%= tabs_tag do |tab| %>
  <%= tab.about    'About', root_path %>
	<%= tab.music		 'Music', homepage_music_path %>
  <%= tab.projects 'Projects', homepage_projects_path %>
	<%= tab.contact  'Contact', homepage_contact_path %>
<% end %>

</ul>

</header> 

<% if current_tab?(:about) %>
	<h1>Welcome to Sprout Solutions!</h1>
	<p>This is Sprout Solutions' single page rails app. Cool, huh?</p>
<% end %>

<% if current_tab?(:music) %>
	<h1>Sprout Solution's Music</h1>
	<p>We would describe our sound as, 'cosmic cowboy' music</p>
<% end %>

<% if current_tab?(:projects) %>
	<h1>Curious what we're developing?</h1>
	<p>You can check out our <a href="https://github.com/sproutsolutions?tab=repositories">Github page</a>.</p>
<% end %>

<% if current_tab?(:contact) %>
	<h1>How to get in touch with us</h1>
	<p>Feel free to leave us a comment on our <a href="https://www.facebook.com/sproutsolutionsus">Facebook page</a>!</p>
<% end %>
</body>
<footer>
</footer>
</html>
